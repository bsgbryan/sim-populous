// bower:styl
// endbower

industrial_color = #e8e800
business_color   = #66f
home_color       = #ea3

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

.game-board
  position absolute
  top 0
  bottom 0
  left 280px
  box-shadow inset 2px 2px 5px rgba(black, 0.1)
  right 0
  overflow auto
  .line
  .tile
    height 64px
  .tile
    width 64px
    vertical-align top
    border 1px solid rgba(#eee, 0.25)
    &:hover
      border 1px solid rgba(#eee, 1)
    .floor
      border-left none
      border-right none
      padding 0 11px
      width 64px
      background-color transparent
      vertical-align bottom
      .unit
        display inline-block
        margin 2px 1px
        background-color white
        border-radius 2px
    &.residential
    &.commercial
    &.industrial
    &.education
    &.public
      border none
    &.residential
      padding-top 2px
      box-shadow 2px 2px 4px rgba(#930, 0.25)
      border 1px solid rgba(#930, 0.25)
      .floor
        height 12px
        .unit
          width 14px
          height 6px
          &:last-child
            margin-left 10px
          &.master
            width 41px
            margin-left 0
    &.commercial
      box-shadow 2px 2px 4px rgba(#006, 0.25)
      border 1px solid rgba(#009, 0.25)
      .floor
        height 7px
        .unit
          width 7px
          height 3px
          margin-left 3px
          &:first-child
            margin-left 0
          &.manager
            width 18px
          &.executive
            width 40px
    &.industrial
      box-shadow 2px 2px 4px rgba(#660, 0.25)
      border 1px solid rgba(#990, 0.25)
      .floor
        height 7px
        .unit
          width 13px
          height 3px
          margin 2px 0
          &.cog
            border-radius 0
            margin-left 1px
            &:first-child
              margin-left 0
              width 14px
          &:first-child
            border-top-left-radius 2px
            border-bottom-left-radius 2px
          &:last-child
            border-top-right-radius 2px
            border-bottom-right-radius 2px
          &.foreman
            width 42px
    &.education
      box-shadow 2px 2px 4px rgba(#303, 0.25)
      border 1px solid rgba(#606, 0.25)
      .floor
        height 17px
        .unit
          width 5px
          height 5px
          margin-left 3px
          margin-top 9px
          &:first-child
            margin-left 0
    &.public
      box-shadow 2px 2px 4px rgba(#334, 0.25)
      border 1px solid rgba(#667, 0.25)
      .floor
        height 17px
        .unit
          width 5px
          height 5px
          margin-left 3px
          margin-top 14px
          &:first-child
            margin-left 0

.stats
.creators
.unit-details
  position absolute

.stats
  &.citizens
  &.employed
    top 45px
  &.money
    top 15px
    left 20px
  &.citizens
    left 20px
  &.employed
    left 170px
  em
    font-family Lato

.creators
  top 130px

.unit-details
  top 40px
  left 39px

.menu
  width 280px
  position absolute
  top 0
  bottom 0
  left 0
  background-color rgba(#eee, 0.25)
  .stats
    .fa
      margin-right 10px
  .tiles
    position absolute
    top 80px
    left 6px
  .tile
    padding-top 9px
    text-align center
    border 1px solid white
    margin-bottom 3px
    width 50px
    height 50px
    .background
      color rgba(black, 0.5)
    .foreground
      color white
  .residential .unit-details
    width 196px
  .commercial .unit-details
    top 70px
    left 55px
  .industrial .unit-details
    top 70px
    left 34px
  .education
  .public
    .unit-details
      top 60px
      left 18px
      width 239px
  .residential
  .commercial
  .industrial
  .education
  .public
    .unit-details
      margin 0 auto
    h3
      position absolute
      left 12px
      width 252px
      font-family Raleway
      em
        text-align right
        position absolute
        right 0
        font-size 0.65em
        top 5px
        font-family Lato
    h5
      font-family Raleway

.industrial .line
  width 210px
  border-left 10px solid industrial_color
  border-right 10px solid industrial_color
  background-color industrial_color
  padding-top 7px
  .worker
    width 63px
    display inline-block
    color darken(industrial_color, 65%)
    border-radius 0
    text-align center
    border-top none
    border-bottom none
    padding 6px 12px
    vertical-align bottom
    border none
    background-color rgba(white, 0.75)
    box-shadow inset 0 1px 0 rgba(white, 0.75), inset 0 -1px 0 rgba(black, 0.125)
    text-shadow 0 1px 0 rgba(white, 0.5)
    &:first-child
      border-top-left-radius 4px
      border-bottom-left-radius 4px
    &:last-child
      border-top-right-radius 4px
      border-bottom-right-radius 4px
    .fa.fa-wrench + .fa
      margin-left 5px
    &.foreman
      width 189px

.floor
  width 165px
  border-left 10px solid business_color
  border-right 10px solid business_color
  background-color business_color
  .office
    display inline-block
    border 6.5px solid business_color
    border-radius 10px
    vertical-align bottom
    width 36.25px
    height 40px
    padding-left 0
    padding-right 0
    background-color rgba(white, 0.9)
    box-shadow inset 0 1px 1px rgba(black, 0.25), inset 0 -1px 0 white
    &.executive
      width 145px
    &.manager
      width 72.5px
    i.fa
      vertical-align top
      padding-top 1px
      color darken(business_color, 65%)
      text-shadow 0 -1px 0 white, 0 1px 1px rgba(black, 0.125)

.education
.public
  .level h5
    .fa-graduation-cap
      margin-left 10px
      margin-right 5px
    .fa-user
      margin-left 2px
      margin-right 5px
  .student
  .service
    display inline-block
    width 47.75px
    text-align center
    border none
    color #333
    padding 6px 0
    .fa + .fa
      margin-left 5px

.single-house-top
.single-house-bottom
  width 201px
  height 120px
  color home_color
.office-complex-top
  height 30px
  padding-top 1px
.office-complex-bottom
  height 80px
.office-complex-top
.office-complex-bottom
  width 165px
  color business_color
.manufacturing-plant-top
.manufacturing-plant-bottom
  color industrial_color
.manufacturing-plant-top
  height 140px
  padding-top 1px
.manufacturing-plant-bottom
  height 30px
  padding-bottom 1px
.single-house-top
.office-complex-top
.manufacturing-plant-top
  text-shadow 0 -1px 0 rgba(black, 0.15)
.single-house-bottom
.office-complex-bottom
.manufacturing-plant-bottom
  text-shadow 0 1px 0 white
.single-house-top
.single-house-bottom
.office-complex-top
.office-complex-bottom
.manufacturing-plant-top
.manufacturing-plant-bottom
  padding-left 0
  padding-right 0
  font-size 15em
  overflow hidden
  margin-bottom -5px
.single-house-bottom:before
  margin-top -130px
.office-complex-bottom:before
  margin-top -140px
.manufacturing-plant-bottom:before
  margin-top -180px
.single-house-bottom:before
.office-complex-bottom:before
.manufacturing-plant-bottom:before
  display block

.beds
  margin-left 30px
  width 135px
  box-sizing border-box
  background-color home_color
  .bed
    display inline-block
    vertical-align bottom
    border-left 5px solid home_color
    border-radius 0
    border-right 5px solid home_color
    border-top 2px solid home_color
    border-bottom 5px solid home_color
    height 45px
    padding 0
    text-align left
    line-height 2.9em
    color home_color
    background-color rgba(white, 0.95)
    box-shadow inset 0 1px 1px rgba(black, 0.125), inset 0 -1px 0 white
    overflow hidden
    &.standard
      width 67.5px
    &.master
      width 135px
    .fa.fa-bed
      vertical-align bottom
      margin-bottom -2px
      margin-left 1px
      font-size 1.7em
      text-shadow 0 1px 1px rgba(black, 0.125), 0 -1px 0 white
    .fa.fa-minus
    .fa.fa-plus
      margin-left 9px
      font-size 1.5em
      line-height 1em
      vertical-align top
      margin-top 3px
      color darken(home_color, 50%)
      text-shadow 0 1px 1px rgba(black, 0.125), 0 -1px 0 white

.menu
.grid
  .tile
    display inline-block
    color rgba(white, 0.9)
    &:hover
      cursor pointer
    &.residential
      background-color home_color
    &.commercial
      background-color business_color
    &.industrial
      background-color industrial_color
    &.education
      background-color #858
    &.public
      background-color #aab

.grid
  width 3264px

